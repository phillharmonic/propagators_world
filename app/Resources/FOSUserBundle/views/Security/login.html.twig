{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<header>
        <h1>Login</h1>
</header>
<form class='form'  action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">{{ 'Username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'Password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" />

    <label for="remember_me">{{ 'Remember'|trans }}</label>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />

    <input type="submit" id="_submit" name="_submit" value="{{ 'Submit'|trans }}" />
</form>
    <div class="form-text" >Register <a href='{{ path('PpgwBundle_register') }}'>here</a></div>
{% endblock fos_user_content %}
